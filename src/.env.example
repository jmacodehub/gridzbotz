# Application Environment
RUST_ENV=development  # development | production
RUST_LOG=info         # debug | info | warn | error

# Solana Network
RPC_URL=https://api.mainnet-beta.solana.com
# Optional: Use private RPC for better performance
# RPC_URL=https://YOUR_QUICKNODE_URL
# RPC_URL=https://YOUR_HELIUS_URL

# Wallet (âš ï¸ KEEP PRIVATE!)
WALLET_PATH=/path/to/your/wallet.json
# Or use private key (base58 encoded)
# WALLET_PRIVATE_KEY=your_base58_key

# Trading Parameters (Override config)
GRID_LEVELS=10
GRID_SPACING=0.5
MAX_POSITION_SIZE=10.0

# Risk Management
MAX_DAILY_LOSS=1000.0
STOP_LOSS_PERCENT=5.0

# Database (Optional)
DATABASE_URL=postgresql://user:pass@localhost/gridbot

# Alerts (Optional)
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK
EMAIL_SMTP=smtp://user:pass@smtp.gmail.com

# Performance
ENABLE_PROFILING=false
